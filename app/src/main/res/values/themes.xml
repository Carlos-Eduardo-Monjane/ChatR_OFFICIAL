<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AutoReplyForWA" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/DarkTurquoise</item>
        <item name="colorPrimaryVariant">@color/Teal</item>
        <item name="colorOnPrimary">@color/slightGrey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/Teal</item>
        <item name="colorSecondaryVariant">@color/slightGrey</item>
        <item name="colorOnSecondary">@color/slightGrey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:textColor" tools:targetApi="l">@color/VampireGray</item>
        <item name="actionMenuTextColor">@color/teal_200</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AutoReplyForWA.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AutoReplyForWA.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AutoReplyForWA.AppBarOverlay.TabbedTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="tabIndicatorColor">@color/CloudyGray</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.AutoReplyForWA.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>